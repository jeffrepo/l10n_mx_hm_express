<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_remission_action" model="ir.actions.act_window">
            <field name="name">Remisiones</field>
            <field name="res_model">pos.remission</field>
            <field name="view_mode">list</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva remisi√≥n desde el punto de venta
                </p>
            </field>
        </record>

        <record id="view_pos_remission_tree" model="ir.ui.view">
            <field name="name">pos.remission.tree</field>
            <field name="model">pos.remission</field>
            <field name="arch" type="xml">
                <list create="false">
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="pending_billing_amount"/>
                    <field name="average_cost_amount"/>
                    <field name="total_pending_billing"/>
                </list>
            </field>
        </record>
    </data>
</odoo>